<%- include('../../layouts/main', { 
  title: 'Projects | Portfolio Admin', 
  currentPage: 'projects',
  scripts: ['/js/projects.js']
}) %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Projects</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <a href="/admin/projects/new" class="btn btn-sm btn-primary">
      <i class="fas fa-plus me-2"></i>Add New Project
    </a>
  </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-primary shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
              Total Projects</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= projects.length %></div>
          </div>
          <div class="col-auto">
            <i class="fas fa-project-diagram fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-success shadow h-100 py-2">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">
            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
              Featured Projects</div>
            <div class="h5 mb-0 font-weight-bold text-gray-800">
              <%= projects.filter(p => p.featured).length %>
            </div>
          </div>
          <div class="col-auto">
            <i class="fas fa-star fa-2x text-gray-300"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Projects Table -->
<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex justify-content-between align-items-center">
    <h6 class="m-0 font-weight-bold text-primary">All Projects</h6>
    <div class="d-flex">
      <div class="input-group input-group-sm me-2" style="max-width: 300px;">
        <input type="text" class="form-control" placeholder="Search projects..." id="searchInput">
        <button class="btn btn-outline-secondary" type="button">
          <i class="fas fa-search"></i>
        </button>
      </div>
      <div class="dropdown">
        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-filter me-1"></i> Filter
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="filterDropdown">
          <li><a class="dropdown-item filter-option active" href="#" data-filter="all">All Projects</a></li>
          <li><a class="dropdown-item filter-option" href="#" data-filter="featured">Featured Only</a></li>
          <li><hr class="dropdown-divider"></li>
          <li><a class="dropdown-item filter-option" href="#" data-filter="published">Published</a></li>
          <li><a class="dropdown-item filter-option" href="#" data-filter="draft">Drafts</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="card-body">
    <% if (projects.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover" id="projectsTable">
          <thead>
            <tr>
              <th>Title</th>
              <th>Technologies</th>
              <th>Status</th>
              <th>Featured</th>
              <th>Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
              <tr data-status="<%= project.status %>" data-featured="<%= project.featured %>">
                <td>
                  <div class="d-flex align-items-center">
                    <% if (project.images && project.images.length > 0) { %>
                      <img src="<%= project.images[0].thumbnail || project.images[0].url %>" 
                           class="rounded me-3" 
                           style="width: 40px; height: 40px; object-fit: cover;"
                           alt="<%= project.title %>">
                    <% } else { %>
                      <div class="bg-light d-flex align-items-center justify-content-center me-3" 
                           style="width: 40px; height: 40px; border-radius: 4px;">
                        <i class="fas fa-image text-muted"></i>
                      </div>
                    <% } %>
                    <div>
                      <h6 class="mb-0"><%= project.title %></h6>
                      <small class="text-muted"><%= project.client || 'Personal Project' %></small>
                    </div>
                  </div>
                </td>
                <td>
                  <% if (project.technologies && project.technologies.length > 0) { %>
                    <div class="d-flex flex-wrap" style="gap: 5px;">
                      <% project.technologies.slice(0, 3).forEach(tech => { %>
                        <span class="badge bg-light text-dark"><%= tech %></span>
                      <% }) %>
                      <% if (project.technologies.length > 3) { %>
                        <span class="badge bg-light text-dark">+<%= project.technologies.length - 3 %></span>
                      <% } %>
                    </div>
                  <% } else { %>
                    <span class="text-muted">No technologies</span>
                  <% } %>
                </td>
                <td>
                  <span class="badge bg-<%= project.status === 'published' ? 'success' : 'secondary' %>">
                    <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                  </span>
                </td>
                <td>
                  <div class="form-check form-switch">
                    <input class="form-check-input toggle-featured" 
                           type="checkbox" 
                           data-id="<%= project._id %>"
                          <%= project.featured ? 'checked' : '' %>>
                  </div>
                </td>
                <td><%= new Date(project.updatedAt).toLocaleDateString() %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/projects/<%= project.slug || project._id %>" 
                       class="btn btn-outline-primary" 
                       target="_blank"
                       data-bs-toggle="tooltip" 
                       title="View Live">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/admin/projects/<%= project._id %>/edit" 
                       class="btn btn-outline-secondary"
                       data-bs-toggle="tooltip" 
                       title="Edit">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button class="btn btn-outline-danger delete-project" 
                            data-id="<%= project._id %>"
                            data-bs-toggle="tooltip" 
                            title="Delete">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
        <h4>No Projects Found</h4>
        <p class="text-muted">Get started by adding your first project</p>
        <a href="/admin/projects/new" class="btn btn-primary mt-2">
          <i class="fas fa-plus me-2"></i>Add New Project
        </a>
      </div>
    <% } %>
  </div>
  <% if (projects.length > 0) { %>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <div class="text-muted small">
        Showing <span id="showingCount"><%= projects.length %></span> of <span id="totalCount"><%= projects.length %></span> projects
      </div>
      <nav>
        <ul class="pagination pagination-sm mb-0">
          <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
          </li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  <% } %>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this project? This action cannot be undone.</p>
        <p class="text-danger">All project data, including images, will be permanently removed.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">
          <i class="fas fa-trash me-1"></i> Delete Project
        </button>
      </div>
    </div>
  </div>
</div>
