<%- include('../../layouts/main', { 
  title: 'Media Library | Portfolio Admin', 
  currentPage: 'media',
  scripts: [
    'https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.js',
    '/js/media-library.js'
  ],
  styles: [
    'https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.css',
    '/css/dropzone.css'
  ]
}) %>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Media Library</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <button class="btn btn-sm btn-primary me-2" type="button" data-bs-toggle="collapse" data-bs-target="#uploadArea" aria-expanded="false" aria-controls="uploadArea">
      <i class="fas fa-upload me-1"></i> Upload Files
    </button>
    <div class="btn-group me-2">
      <button type="button" class="btn btn-sm btn-outline-secondary" id="gridViewBtn" title="Grid View">
        <i class="fas fa-th-large"></i>
      </button>
      <button type="button" class="btn btn-sm btn-outline-secondary" id="listViewBtn" title="List View">
        <i class="fas fa-list"></i>
      </button>
    </div>
    <div class="dropdown">
      <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-sort me-1"></i> Sort
      </button>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
        <li><a class="dropdown-item sort-option active" href="#" data-sort="date-desc">Newest First</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="date-asc">Oldest First</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="name-asc">Name (A-Z)</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="name-desc">Name (Z-A)</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="size-asc">Size (Smallest)</a></li>
        <li><a class="dropdown-item sort-option" href="#" data-sort="size-desc">Size (Largest)</a></li>
      </ul>
    </div>
  </div>
</div>

<!-- Upload Area -->
<div class="collapse mb-4" id="uploadArea">
  <div class="card card-body bg-light">
    <div class="text-center py-3">
      <div id="dropzone" class="dropzone">
        <div class="dz-message" data-dz-message>
          <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
          <h5>Drop files here or click to upload</h5>
          <p class="text-muted">Upload images, documents, or other files (max 10MB per file)</p>
        </div>
      </div>
      <div class="mt-3">
        <button type="button" class="btn btn-primary" id="startUpload" disabled>
          <i class="fas fa-upload me-1"></i> Upload Files
        </button>
        <button type="button" class="btn btn-outline-secondary" id="cancelUpload">
          <i class="fas fa-times me-1"></i> Cancel
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="row mb-4">
  <div class="col-md-8">
    <div class="input-group">
      <span class="input-group-text bg-white"><i class="fas fa-search"></i></span>
      <input type="text" class="form-control" id="searchMedia" placeholder="Search files...">
    </div>
  </div>
  <div class="col-md-4 mt-2 mt-md-0">
    <select class="form-select" id="filterType">
      <option value="all">All File Types</option>
      <option value="image">Images</option>
      <option value="document">Documents</option>
      <option value="video">Videos</option>
      <option value="audio">Audio</option>
      <option value="archive">Archives</option>
    </select>
  </div>
</div>

<!-- Media Grid View -->
<div id="mediaGrid" class="row g-3">
  <% if (mediaItems.length > 0) { %>
    <% mediaItems.forEach(item => { %>
      <div class="col-6 col-sm-4 col-md-3 col-lg-2" data-type="<%= item.type %>" data-date="<%= new Date(item.uploadedAt).getTime() %>" data-name="<%= item.name.toLowerCase() %>" data-size="<%= item.size %>">
        <div class="card h-100 media-item">
          <div class="position-relative">
            <% if (item.type === 'image') { %>
              <a href="<%= item.url %>" data-lightbox="media-gallery" data-title="<%= item.name %>">
                <img src="<%= item.thumbnail || item.url %>" class="card-img-top" alt="<%= item.name %>">
              </a>
            <% } else { %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 120px;">
                <i class="<%= getFileIcon(item.type) %> fa-3x text-muted"></i>
              </div>
            <% } %>
            <div class="form-check position-absolute top-0 start-0 m-2">
              <input class="form-check-input media-checkbox" type="checkbox" value="<%= item._id %>" id="media-<%= item._id %>">
            </div>
            <div class="dropdown position-absolute top-0 end-0 m-2">
              <button class="btn btn-sm btn-light rounded-circle p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-ellipsis-v"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="<%= item.url %>" download><i class="fas fa-download me-2"></i>Download</a></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#editMediaModal" data-id="<%= item._id %>"><i class="fas fa-edit me-2"></i>Edit</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#deleteMediaModal" data-id="<%= item._id %>"><i class="fas fa-trash me-2"></i>Delete</a></li>
              </ul>
            </div>
          </div>
          <div class="card-body p-2">
            <h6 class="card-title text-truncate mb-0" title="<%= item.name %>"><%= item.name %></h6>
            <p class="card-text small text-muted mb-1"><%= formatFileSize(item.size) %></p>
            <p class="card-text small text-muted mb-0"><%= new Date(item.uploadedAt).toLocaleDateString() %></p>
          </div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="col-12 text-center py-5">
      <i class="fas fa-images fa-4x text-muted mb-3"></i>
      <h4>No Media Files</h4>
      <p class="text-muted">Upload your first file to get started</p>
      <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#uploadArea" aria-expanded="false" aria-controls="uploadArea">
        <i class="fas fa-upload me-1"></i> Upload Files
      </button>
    </div>
  <% } %>
</div>

<!-- Media List View (Hidden by default) -->
<div id="mediaList" class="d-none">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="40">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="selectAllMedia">
            </div>
          </th>
          <th>Name</th>
          <th>Type</th>
          <th>Size</th>
          <th>Uploaded</th>
          <th class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (mediaItems.length > 0) { %>
          <% mediaItems.forEach(item => { %>
            <tr data-type="<%= item.type %>" data-date="<%= new Date(item.uploadedAt).getTime() %>" data-name="<%= item.name.toLowerCase() %>" data-size="<%= item.size %>">
              <td>
                <div class="form-check">
                  <input class="form-check-input media-checkbox" type="checkbox" value="<%= item._id %>">
                </div>
              </td>
              <td>
                <div class="d-flex align-items-center">
                  <% if (item.type === 'image') { %>
                    <img src="<%= item.thumbnail || item.url %>" class="rounded me-2" width="40" height="40" alt="<%= item.name %>">
                  <% } else { %>
                    <div class="bg-light rounded d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                      <i class="<%= getFileIcon(item.type) %>"></i>
                    </div>
                  <% } %>
                  <div>
                    <div class="fw-medium"><%= item.name %></div>
                    <small class="text-muted"><%= item.dimensions || '' %></small>
                  </div>
                </div>
              </td>
              <td><span class="text-uppercase"><%= item.type %></span></td>
              <td><%= formatFileSize(item.size) %></td>
              <td><%= new Date(item.uploadedAt).toLocaleDateString() %></td>
              <td class="text-end">
                <div class="btn-group btn-group-sm">
                  <a href="<%= item.url %>" class="btn btn-sm btn-outline-primary" download>
                    <i class="fas fa-download"></i>
                  </a>
                  <a href="#" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editMediaModal" data-id="<%= item._id %>">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteMediaModal" data-id="<%= item._id %>">
                    <i class="fas fa-trash"></i>
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center py-5">
              <i class="fas fa-images fa-3x text-muted mb-3"></i>
              <h4>No Media Files</h4>
              <p class="text-muted">Upload your first file to get started</p>
              <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#uploadArea" aria-expanded="false" aria-controls="uploadArea">
                <i class="fas fa-upload me-1"></i> Upload Files
              </button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- Bulk Actions -->
<div class="fixed-bottom bg-white border-top p-3 d-none" id="bulkActions">
  <div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
      <div>
        <span id="selectedCount">0</span> items selected
      </div>
      <div>
        <button class="btn btn-sm btn-outline-secondary me-2" id="deselectAll">
          <i class="fas fa-times me-1"></i> Deselect All
        </button>
        <div class="btn-group">
          <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-cog me-1"></i> Actions
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#" id="downloadSelected"><i class="fas fa-download me-2"></i>Download</a></li>
            <li><a class="dropdown-item" href="#" id="deleteSelected" data-bs-toggle="modal" data-bs-target="#deleteMediaModal"><i class="fas fa-trash me-2"></i>Delete</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Media Modal -->
<div class="modal fade" id="editMediaModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Media</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editMediaForm">
          <div class="text-center mb-4">
            <img id="editMediaPreview" src="" class="img-fluid rounded" style="max-height: 200px;" alt="Preview">
          </div>
          <div class="mb-3">
            <label for="mediaName" class="form-label">File Name</label>
            <input type="text" class="form-control" id="mediaName" name="name" required>
          </div>
          <div class="mb-3">
            <label for="mediaAltText" class="form-label">Alt Text</label>
            <input type="text" class="form-control" id="mediaAltText" name="altText" placeholder="Describe this media">
            <div class="form-text">Alternative text for accessibility</div>
          </div>
          <div class="mb-3">
            <label for="mediaDescription" class="form-label">Description</label>
            <textarea class="form-control" id="mediaDescription" name="description" rows="2"></textarea>
          </div>
          <input type="hidden" id="mediaId" name="id">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="saveMediaChanges">
          <i class="fas fa-save me-1"></i> Save Changes
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Media Modal -->
<div class="modal fade" id="deleteMediaModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Media</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the selected <span id="deleteCount">1</span> item(s)?</p>
        <p class="text-danger">This action cannot be undone and the file(s) will be permanently removed from the server.</p>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="confirmDeleteMedia">
          <label class="form-check-label" for="confirmDeleteMedia">
            I understand that this action cannot be undone
          </label>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteMediaBtn" disabled>
          <i class="fas fa-trash me-1"></i> Delete Permanently
        </button>
      </div>
    </div>
  </div>
</div>

<!-- File Info Sidebar (Hidden by default) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="fileInfoSidebar" aria-labelledby="fileInfoSidebarLabel">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="fileInfoSidebarLabel">File Information</h5>
    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">
    <div class="text-center mb-4">
      <img id="sidebarPreview" src="" class="img-fluid rounded" style="max-height: 200px;" alt="Preview">
      <h5 class="mt-3 mb-1" id="sidebarFileName">File Name</h5>
      <p class="text-muted mb-3" id="sidebarFileType">Type</p>
      <div class="d-grid gap-2">
        <a href="#" class="btn btn-primary" id="sidebarDownloadBtn">
          <i class="fas fa-download me-1"></i> Download
        </a>
      </div>
    </div>
    <hr>
    <h6 class="mb-3">Details</h6>
    <ul class="list-unstyled">
      <li class="mb-2"><strong>File Name:</strong> <span id="sidebarName">-</span></li>
      <li class="mb-2"><strong>File Size:</strong> <span id="sidebarSize">-</span></li>
      <li class="mb-2"><strong>File Type:</strong> <span id="sidebarType">-</span></li>
      <li class="mb-2"><strong>Dimensions:</strong> <span id="sidebarDimensions">-</span></li>
      <li class="mb-2"><strong>Uploaded:</strong> <span id="sidebarUploaded">-</span></li>
      <li class="mb-2"><strong>Modified:</strong> <span id="sidebarModified">-</span></li>
      <li><strong>URL:</strong> 
        <div class="input-group input-group-sm mt-1">
          <input type="text" class="form-control form-control-sm" id="sidebarUrl" readonly>
          <button class="btn btn-outline-secondary btn-sm" type="button" id="copyUrlBtn">
            <i class="fas fa-copy"></i>
          </button>
        </div>
      </li>
    </ul>
    <hr>
    <h6 class="mb-3">Metadata</h6>
    <div class="mb-3">
      <label for="sidebarAltText" class="form-label small">Alt Text</label>
      <input type="text" class="form-control form-control-sm" id="sidebarAltText" placeholder="Describe this media">
    </div>
    <div class="mb-3">
      <label for="sidebarDescription" class="form-label small">Description</label>
      <textarea class="form-control form-control-sm" id="sidebarDescription" rows="2"></textarea>
    </div>
    <button class="btn btn-sm btn-primary w-100" id="saveMetadataBtn">
      <i class="fas fa-save me-1"></i> Save Metadata
    </button>
  </div>
</div>
