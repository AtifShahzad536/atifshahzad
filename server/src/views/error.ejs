<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= statusCode || 'Error' %> | Portfolio Admin</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin.css">
  
  <style>
    .error-container {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 2rem;
    }
    .error-code {
      font-size: 8rem;
      font-weight: 700;
      line-height: 1;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .error-message {
      font-size: 1.5rem;
      margin-bottom: 2rem;
      color: #6c757d;
    }
    .error-actions .btn {
      margin: 0 0.5rem;
    }
    @media (max-width: 576px) {
      .error-code {
        font-size: 6rem;
      }
      .error-message {
        font-size: 1.25rem;
      }
    }
  </style>
</head>
<body class="bg-light">
  <div class="container">
    <div class="error-container">
      <div>
        <div class="error-code"><%= statusCode || '500' %></div>
        <h1 class="h2 mb-3"><%= message || 'Something went wrong!' %></h1>
        <p class="error-message">
          <% if (statusCode === 404) { %>
            The page you're looking for doesn't exist or has been moved.
          <% } else if (statusCode === 403) { %>
            You don't have permission to access this page.
          <% } else if (statusCode === 401) { %>
            You need to be logged in to access this page.
          <% } else { %>
            An unexpected error has occurred. Please try again later.
          <% } %>
        </p>
        <div class="error-actions">
          <a href="/admin/dashboard" class="btn btn-primary">
            <i class="fas fa-home me-1"></i> Back to Dashboard
          </a>
          <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Go Back
          </a>
        </div>
        <% if (process.env.NODE_ENV === 'development') { %>
          <div class="mt-5 text-start">
            <h5 class="mb-3">Error Details:</h5>
            <pre class="bg-dark text-light p-3 rounded" style="max-height: 200px; overflow: auto;">
              <code><%= typeof error !== 'undefined' ? JSON.stringify(error, null, 2) : 'No error details available' %></code>
            </pre>
            <div class="mt-2 text-muted small">
              <i class="fas fa-info-circle me-1"></i> This error is only shown in development mode.
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom JS -->
  <script>
    // Auto-hide alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
      // Auto-hide alerts
      const alerts = document.querySelectorAll('.alert');
      alerts.forEach(alert => {
        setTimeout(() => {
          const bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        }, 5000);
      });
      
      // Add smooth scrolling to all links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        });
      });
    });
  </script>
</body>
</html>
